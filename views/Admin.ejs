<html>
    <head>
        <link href="styles.css" rel="stylesheet"> 
        <style>
            table, th, td, tr {
              border:1px solid black;
            }
            </style>
    </head>
    <body>
        <p>Admin Panel</p>
    </body>
    <div class="Admin-actions">
        <ul>
        <li><a href="/view-users">View Users</a></li>
        <li><a href="">Delete Users</a></li>
        <li><a href="/view-product">View Products</a></li>
        <li><a href="">Add Product</a></li>
        <li><a href="">Modify Product</a></li>
        <li><a href="">Delete Product</a></li>
        <li><a href="">View Bought Products</a></li>
        </ul>
        
    </div>

    <% if(locals.viewUsers){ %>
    <% if(viewUsers){ %>
        <p>View Users</p>
        <% console.log(users) %>
        <table style="width:100%">
            <tr>
                <th>
                    Username
                </th>
                <th>
                    User-Email
                </th>
                <th>
                    AccountType
                </th>
            </tr>
        <% users.forEach(user => { %>
        
                <tr>
                    <td>
                        <%= user.username %> 
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.accountType %>  
                    </td>
                </tr>
                <br>
        </table>
         <% }); %>
    <% }} %>


    <% if(locals.viewProducts){ %>
        <% if(viewProducts){ %>
            <p>View Products</p>
            
            <table>
                <tr>
                    <th>
                        Product-Name:
                    </th>
                    <th>
                        Product-Price:
                    </th>
                </tr>
                <% products.forEach(product => { %>
                    <tr>
                        <td>
                            <%= product.name %>
                        </td>
                        <td>
                            <%= product.image %>
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                    </tr>

            </table>
            
         <% }); %>
           
        <% }} %>


</html>